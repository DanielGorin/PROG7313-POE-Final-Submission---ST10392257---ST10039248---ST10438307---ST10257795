<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.PCv1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Fortune_Navy</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/Misty_White</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Gold_Coin</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/Misty_White</item>

        <!-- Background and Surface colors -->
        <item name="android:colorBackground">@color/background_dark</item> <!-- This is the main background -->
        <item name="colorBackgroundFloating">@color/background_dark</item> <!-- MaterialComponent uses this -->
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnBackground">@color/on_background_dark</item>
        <item name="colorOnSurface">@color/on_background_dark</item>

        <item name="android:fontFamily">@font/manrope_medium</item>
        <item name="fontFamily">@font/manrope_medium</item>
        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- For Navigation bar (optional) -->
        <item name="android:navigationBarColor">@color/Midnight_Ink</item>
        <item name="android:navigationIcon">@color/Soft_Blue_Gray</item>
    </style>
</resources>
